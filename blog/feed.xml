---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
    xmlns:atom="http://www.w3.org/2005/Atom"
    xmlns:dc="http://purl.org/dc/elements/1.1/"
    xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
    xmlns:content="http://purl.org/rss/1.0/modules/content/"
>
{%- assign oldest_post = site.posts | last -%}
{%- assign latest_post = site.posts | first -%}
    <channel>
        <language>{{ site.human_language | downcase | default: "en-us" | xml_escape }}</language>
        <title>{{ site.title | xml_escape }}</title>
        <description>{% if site.description %}{{ site.description | xml_escape }}{% endif %}</description>
        <copyright>Copyright © by {{ site.title | xml_escape }}, {% if oldest_post %}{{ oldest_post.date | date: "%Y" | xml_escape }} – {% endif %}{{ "now" | date: "%Y" | xml_escape }}</copyright>
        {% if site.rss.webmaster_email %}<webMaster>{{ site.rss.webmaster_email | xml_escape }}</webMaster>{% endif %}
        {% if site.rss.editor_email %}<managingEditor>{{ site.rss.editor_email | xml_escape }}</managingEditor>{% endif %}
        <sy:updatePeriod>{{ site.feed_update_period | default: "daily" | xml_escape }}</sy:updatePeriod>
        <sy:updateFrequency>{{ site.feed_update_frequency | default: 1 | xml_escape }}</sy:updateFrequency>
        {% if site.rss.ttl %}<ttl>{{ site.rss.ttl | xml_escape }}</ttl>{% endif %}
        <link>{{ site.url }}</link>
        <atom:link href="{{ page.url | absolute_url }}" rel="self" type="application/rss+xml" />
        {% if latest_post %}<lastBuildDate>{{ latest_post.date | date_to_rfc822 }}</lastBuildDate>{% endif %}
        {% if site.rss.image %}
        <image>
            <url>{{ "/static/images/" | append: site.rss.image | absolute_url }}</url>
            <title>{{ site.title | xml_escape }}</title>
            <link>{{ site.url }}</link>
            <description>{% if site.description %}{{ site.description | xml_escape }}{% endif %}</description>
        </image>
        {% endif %}
        {% assign x = site.rss.items | default: 10 %}
        {% for post in site.posts limit:x %}
        <item>
            <title>{{ post.title | xml_escape }}</title>
            {% if post.author.name %}
            <dc:creator>{{ post.author.name | xml_escape }}</dc:creator>
            {% endif %}        
            <description>{{ post.excerpt | xml_escape }}</description>
            <content:encoded><![CDATA[{{ post.content | strip }}]]></content:encoded>
            <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
            <link>{{ post.url | absolute_url }}</link>
            <guid isPermaLink="true">{{ post.url | absolute_url }}</guid>
        </item>
        {% endfor %}
    </channel>
</rss>
